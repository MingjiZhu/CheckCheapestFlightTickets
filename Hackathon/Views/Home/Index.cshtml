@model Airports

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
    </div>

    <section>
        <form method="get" asp-controller="Home" asp-action="Search" class="mt-3">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Departure Date: </label>
                <div class="col-sm-7">
                    <input type="text" name="depDate" class="form-control" placeholder="yyyy-mm" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Departure Airport: </label>
                <div class="col-sm-7">
                    <select asp-for="OriginAirport" class="form-control mr-sm-2" asp-items="Html.ViewData.Model.AirportList"></select>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Destination Airport: </label>
                <div class="col-sm-7">
                    <select asp-for="DestinationAirport" class="form-control mr-sm-2" asp-items="Html.ViewData.Model.AirportList"></select>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Return Date: </label>
                <div class="col-sm-7">
                    <input type="text" name="retDate" class="form-control" placeholder="yyyy-mm" />
                </div>
            </div>

            <div class="form-group row" style="float:right">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" value="Search">Search</button>
                </div>
            </div>
        </form>

    </section>
</div>
